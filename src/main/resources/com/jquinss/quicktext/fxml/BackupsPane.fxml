<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0" prefWidth="430.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <tabs>
    <Tab text="Backups">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="backupsTableView" prefHeight="263.0" prefWidth="315.0">
                    <columns>
                      <TableColumn fx:id="backupFileNameColumn" prefWidth="150.0" text="File name" />
                      <TableColumn fx:id="backupCreationDateTimeColumn" minWidth="0.0" prefWidth="164.0" text="Date/time" />
                    </columns>
                  </TableView>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#createBackup" text="Create" />
                        <Button mnemonicParsing="false" onAction="#deleteBackup" text="Delete" />
                        <Button mnemonicParsing="false" onAction="#loadBackup" text="Load" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
    </Tab>
    <Tab text="Schedule">
         <content>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="362.0" spacing="10.0">
               <children>
                  <TableView fx:id="scheduledBackupTasksTableView" prefHeight="246.0" prefWidth="410.0">
                    <columns>
                      <TableColumn fx:id="nextBackupRunDateTimeColumn" prefWidth="99.0" text="Next Run" />
                      <TableColumn fx:id="lastBackupRunDateTimeColumn" minWidth="2.0" prefWidth="107.0" text="Last Run" />
                      <TableColumn fx:id="lastBackupResultColumn" prefWidth="107.0" text="Last Result" />
                      <TableColumn fx:id="backupRecurrenceColumn" prefWidth="108.0" text="Recurrence" />
                    </columns>
                  </TableView>
                  <DateTimePicker fx:id="dateTimePicker" promptText="Pick a date" />
                  <VBox prefHeight="107.0" prefWidth="350.0" spacing="10.0">
                     <children>
                        <Label text="Recurrency:" />
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="8.0">
                           <children>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                                 <children>
                                  	<RadioButton fx:id="noRecurrencyRadioButton" selected="true" mnemonicParsing="false">
                                		<toggleGroup>
       										<ToggleGroup fx:id="toggleRadioButtonGroup"/>
   										</toggleGroup>
                                 	</RadioButton>
                                    <Label text="No recurrent" />
                                 </children>
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                                 <children>
                                 	<RadioButton fx:id="hoursRadioButton"  mnemonicParsing="false">
                                		<toggleGroup>
       										<fx:reference source="toggleRadioButtonGroup"/>
   										</toggleGroup>
                                 	</RadioButton>
                                    <Label text="Every:" />
                                    <Spinner fx:id="hoursSpinner" >
      									<valueFactory>
        									<SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="23"/>
      									</valueFactory>
    								</Spinner>
                                    <Label layoutX="34.0" layoutY="10.0" text="hours" />
                                 </children>
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                                 <children>
                                 	<RadioButton fx:id="daysRadioButton"  mnemonicParsing="false">
                                		<toggleGroup>
       										<fx:reference source="toggleRadioButtonGroup"/>
   										</toggleGroup>
                                 	</RadioButton>
                                    <Label text="Every:" />
									<Spinner fx:id="daysSpinner" >
      									<valueFactory>
        									<SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="30"/>
      									</valueFactory>
    								</Spinner>
                                    <Label layoutX="34.0" layoutY="10.0" text="days" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="52.0" prefWidth="410.0" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#createScheduledBackupTask" text="Create" />
                        <Button mnemonicParsing="false" onAction="#deleteScheduledBackupTask" text="Delete" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
    </Tab>
  </tabs>
